<h1><%= @list.name %></h1>

<% if @list.photo.attached? %>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
<%= image_tag "list_placeholder", alt: "cinema", width: 200 %>
<% end %>

<%= link_to 'Add Movie', new_list_bookmark_path(@list.id) %>

<div class="container py-3">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
        <h3><%= bookmark.movie.title%></h3>
        <p><%= bookmark.comment%></p>
        <%= link_to "Delete", bookmark_path(bookmark), method: :delete, class: "delete-link btn btn-sm btn-danger" %>
      </div>
    <% end %>
    </div>
</div>

<%= link_to 'Back', root_path %>